<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.desc %></td>
        <td><%= link_to 'Show', book_article_path(article.book,article) %></td>
        <td><%= link_to 'Edit', edit_book_article_path(article.book, article) %></td>
        <td><%= link_to 'Destroy', book_article_path(article.book,article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_book_article_path(@book) %> | 
<%= link_to 'Back', book_path(@book) %>
